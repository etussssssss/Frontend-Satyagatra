<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="200dp"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="@drawable/border_radius_rounded_corners"
    android:clipToOutline="true"
    app:cardCornerRadius="15dp"
    app:cardElevation="8dp">

    <LinearLayout
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/nama"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Yakin Batal Jadwal?"
            android:textColor="@color/ijo1"
            android:textStyle="bold"
            android:layout_marginBottom="20dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toEndOf="@+id/imageViewProfileDes"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/btn_no"
            android:layout_width="168dp"
            android:layout_height="33dp"
            android:layout_marginBottom="14dp"
            android:background="@drawable/decor_btn_selector1_hover"
            android:backgroundTint="@color/abuabuicon"
            android:clipToOutline="true"
            android:textColor="@color/white"
            android:text="Tidak"
            android:textSize="12dp" />

        <Button
            android:id="@+id/btn_yes"
            android:layout_width="168dp"
            android:layout_height="31dp"
            android:layout_marginBottom="9dp"
            android:background="@drawable/decor_btn_selector1_hover"
            android:clipToOutline="true"
            android:textColor="@color/white"
            android:text="Ya"
            android:textSize="12dp" />
    </LinearLayout>

</androidx.cardview.widget.CardView>
